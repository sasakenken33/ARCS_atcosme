<section class="top">
  <div class="container">
    <%= image_tag 'ARCS_normal_cosme.png', class:"logo" %>
  </div>
</section>
<section class="main">
  <div class="container">
    <h2>Please put info here</h2>
    <div class="flashes">
      <div class="alert">
        <% if flash[:alert] %>
          <%= flash[:alert] %>
        <% end %>
      </div>
      <div class="success">
        <% if flash[:success] %>
          <%= flash[:success] %>
        <% end %>
      </div>
    </div>
    <div class="loader hidden">Loading...</div>
    <div class="form">
      <%= form_with url:"/reviews/scrape" do |f| %>
        <dl>
          <dt>商品名</dt>
          <dd><%= f.text_field :name , class:"textbox" %></dd>
        </dl>
        <dl>
          <dt>商品ページURL</dt>
          <dd><%= f.text_field :page_url , class:"textbox" %></dd>
        </dl>
        <dl>
          <dt>取得レビュー数</dt>
          <dd><%= f.text_field :rev_count , class:"textbox" %></dd>
        </dl>
      <%= f.submit "START", id:"btn"%>
      <% end %>
      <% if session[:file_name] %>
        <%= link_to 'download', reviews_download_path, class:"btn" %> 
      <% end %>
    </div>
  </div>
</section>