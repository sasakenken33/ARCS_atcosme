<section class="top">
  <div class="container">
    <h1>ARCS-@cosme</h1>
  </div>
</section>
<section class="main">
  <div class="container">
    <h2>Please put info here</h2>
    <div class="flash">
      <% if flash.notice.present? %>
        <%= flash.notice %>
      <% end %>
    </div>
    <div class="form">
      <%= form_with url:"/reviews/scrape" do |f| %>
        <dl>
          <dt>商品名</dt>
          <dd><%= f.text_field :name , class:"textbox" %></dd>
        </dl>
        <dl>
          <dt>商品ページURL</dt>
          <dd><%= f.text_field :page_url , class:"textbox" %></dd>
        </dl>
        <dl>
          <dt>取得レビュー数</dt>
          <dd><%= f.text_field :rev_count , class:"textbox" %></dd>
        </dl>
      <%= f.submit "START"%>
      <% end %>
    </div>
  </div>
</section>